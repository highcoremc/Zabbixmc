@import 'shared/variables.styl'
@import 'shared/functions.styl'

html, body
  scroll-behavior smooth

body
  background #f5f5fd

.disable-highlight
  -webkit-user-select none
  -khtml-user-select none
  -moz-user-select none
  -ms-user-select none
  user-select none

.disable-overflow
  overflow hidden !important

@media (min-width: 1600px)
  .container-xl,
  .container-lg,
  .container-md,
  .container-sm,
  .container
    max-width: 1300px

@keyframes animated-background
  0%
    -webkit-filter hue-rotate(0deg)
  50%
    -webkit-filter hue-rotate(60deg)
  0%
    -webkit-filter hue-rotate(0deg)
